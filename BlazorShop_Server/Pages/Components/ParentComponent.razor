@page "/Components/ParentComponent"

<h3>Parent Child Relation</h3>

<_ChildComponent OnButtonClick="ShowMessage" Title="Title from Parent Component.">
    Render Fragment from Parent.
</_ChildComponent>

<p><b>@messageText</b></p>

<_ChildComponent Title="Second Title." />

@code {
    // Variables.
    public string messageText = "";

    // Methods.
    private void ShowMessage() {
        messageText = "Button clicked on Child Component.";
    }
}